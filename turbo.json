{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "web#dev": {
      "env": ["ANI_*"],
      "passThroughEnv": ["ANI_*"]
    },
    "web#build": {
      "env": ["ANI_*"],
      "passThroughEnv": ["ANI_*"]
    }
  }
}
